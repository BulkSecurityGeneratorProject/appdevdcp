<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="false"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Loja.
    -->
    <changeSet id="20181111155653-1" author="jhipster">
        <createTable tableName="loja">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="nome" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="endereco" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="cidade" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="cep" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="latitude" type="double">
                <constraints nullable="false" />
            </column>

            <column name="longitude" type="double">
                <constraints nullable="false" />
            </column>

<!--             jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove -->
        </createTable>
        
        <createTable tableName="loja_avaliadores">
            <column name="avaliadores_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="lojas_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="lojas_id, avaliadores_id" tableName="loja_avaliadores"/>
                
        <loadData encoding="UTF-8"
                  file="config/liquibase/loja.csv"
                  separator=";"
                  tableName="loja">
            <column name="created_date" type="timestamp"/>
        </loadData>
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/loja_avaliadores.csv"
                  separator=";"
                  tableName="loja_avaliadores"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
